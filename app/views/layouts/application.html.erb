<!DOCTYPE html>
<html>
  <head>
    <title>Mytwitter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-primary bg-light">
      <a class="navbar-brand" href="/">Mytwitter</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <% if user_signed_in? %>
              <%= link_to "Мой профиль", profile_url, class:'nav-link'%>
            </li>
            <li class="nav-item active">
              <%= link_to "Создать пост", new_post_url, class:'nav-link'%>
            </li>
          </li>
        <% else %>
        <% end %>
      </li>
    </ul>
    <form class="form-inline my-2 my-lg-0">
      <% if user_signed_in? %>
        <span class='badge badge-pill badge-secondary'>Привет, <%= current_user.profile.first_name + ' ' + current_user.profile.second_name %></span>
        <%= link_to 'Выйти', destroy_user_session_path, :method => :delete, class:'btn btn-danger ml-2' %>
      <% else %>
        <%= link_to 'Авторизация', user_session_path, class:'btn btn-success' %>
      <% end %>
    </form>
  </div>
</nav>
<%= yield %>
</body>
</html>
