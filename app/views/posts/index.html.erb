<div class="posts_wrapper">
  <% @posts.each do |post|%>
    <div class="post">
      <h4><%= post.title %></h4>
      <p><%= post.text %></p>
      <hr class="my-4">
      <div class='post__grid'>
        <div class='mt-4'>
          <% liked = post.likes.find_by(user: current_user) %>
          <% if liked %>
            <%= link_to post_likes_path(post), method: :delete do %>
              <%= image_tag "Unlike" %>
            <% end %>
          <% else %>
            <%= link_to post_likes_path(post), method: :post do %>
              <%= image_tag "Like" %>
            <% end %>
          <% end %>
          <%= post.likes.count %>
        </div>
        <div class="post__info">
          <p><%= post.user.profile.nickname %></p>
          <p><%= post.created_at %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>
